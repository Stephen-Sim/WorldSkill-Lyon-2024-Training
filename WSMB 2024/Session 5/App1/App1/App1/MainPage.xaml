<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage" Title="Login">

    <StackLayout VerticalOptions="Center" Margin="5">

        <Image Source="logistics" HeightRequest="300"/>
        <Grid ColumnDefinitions="120, *" RowDefinitions="50, 50, 50">
            
            <Label Text="Username:"/>
            <Entry x:Name="uEntry" Grid.Column="1"/>
            <Label Text="Password:" Grid.Row="1"/>
            <Entry IsPassword="True" Grid.Row="1" x:Name="pEntry" Grid.Column="1"/>

            <Button Text="Login" Clicked="Button_Clicked" Grid.Column="1" Grid.Row="2"/>
        </Grid>
    </StackLayout>

</ContentPage>
