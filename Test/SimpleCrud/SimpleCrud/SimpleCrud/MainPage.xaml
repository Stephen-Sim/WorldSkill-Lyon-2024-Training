<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SimpleCrud.MainPage" Title="Login">

    <StackLayout Margin="5">
        <Grid VerticalOptions="CenterAndExpand" RowDefinitions="50, 50, 50" ColumnDefinitions="100, *">
            <Label Text="Username: "/>
            <Entry Grid.Column="1" x:Name="uEntry"/>

            <Label Grid.Row="1" Text="Password: "/>
            <Entry Grid.Row="1" Grid.Column="1" x:Name="pEntry" IsPassword="True"/>

            <Button Grid.Row="2" Grid.Column="1" Text="Login" Clicked="Button_Clicked"/>
        </Grid> 
    </StackLayout>

</ContentPage>
